{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    "docker:enableMajor",
    "local>statens-pensjonskasse/renovate-presets-internal:gal-updates-automerge-and-skip-publish"
  ],
  "timezone": "UTC",
  "rangeStrategy": "bump",
  "npmrc": "@statens-pensjonskasse:registry=https://npm.pkg.github.com/",
  "packageRules": [
    {
      "matchPackageNames": [
        "*"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-non-major",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
