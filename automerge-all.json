{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    "docker:enableMajor"
  ],
  "timezone": "UTC",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": [
        "*"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all-dependencies",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
