{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    "docker:enableMajor"
  ],
  "timezone": "UTC",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": [
        "*"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-non-major",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    }
  ]
}
