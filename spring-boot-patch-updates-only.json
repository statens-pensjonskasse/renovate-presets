{
  "packageRules": [
    {
      "matchPackageNames": ["org.springframework.boot:spring-boot-starter-parent", "org.springframework.boot:spring-boot-dependencies"],
      "enabled": true,
      "separateMinorPatch": true
    },
    {
      "matchPackageNames": ["org.springframework.boot:spring-boot-starter-parent", "org.springframework.boot:spring-boot-dependencies"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackageNames": ["org.springframework.boot:spring-boot-starter-parent", "org.springframework.boot:spring-boot-dependencies"],
      "matchUpdateTypes": ["patch"],
      "enabled": true,
      "groupName": "spring boot patch"
    }
  ]
}
